@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var name = HttpContextAccessor.HttpContext.Request.Cookies["Name"];
    var avatar = HttpContextAccessor.HttpContext.Request.Cookies["Avatar"];
    var token = HttpContextAccessor.HttpContext.Request.Cookies["Booking.Application.IdR"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Booking.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/CustomApartmentIndexView.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/main.js" defer></script>
</head>
<body>
    <header class="bk_header">
        <nav class="bk_header__bar">
            <div class="bk_header__main">
                <div class="bk_header__logo">
                    <span aria-label="Booking online service">Booking</span>
                </div>
            </div>
            <div class="bk_header__buttons">
                @if (name != null && avatar != null && token != null)
                {
                    <div class="bk_header__buttons__button">
                        @name
                        <img src=@avatar class="rounded-circle" style="width: 25px;" alt="Avatar" />
                        </div>
                    <a class="nav__link" asp-action="Logout" asp-controller="Account">
                        <div class="bk_header__buttons__button">Logout</div>
                    </a>
                }
                else
                {
                    <a class="nav__link" asp-action="Register" asp-controller="Account">
                        <div class="bk_header__buttons__button">Register</div>
                    </a>
                    <a class="nav__link" asp-action="Login" asp-controller="Account">
                        <div class="bk_header__buttons__button">Log in</div>
                    </a>
                }
            </div>
        </nav>
        <nav class="bk_header_nav_bar">
            <ul class="bk_header_nav_panel">
                <a class="nav__link" asp-action="Index" asp-controller="Apartment">
                <li class="bk_header_nav_item">Apartments</li></a>
                <a class="nav__link" asp-action="Index" asp-controller="ApartmentType">
                <li class="bk_header_nav_item">Apartments types</li></a>
                <a class="nav__link" asp-action="Index" asp-controller="City">
                <li class="bk_header_nav_item">Cities</li></a>
                <a class="nav__link" asp-action="Index" asp-controller="Country">
                <li class="bk_header_nav_item">Countries</li></a> 
                <a class="nav__link" asp-action="Index" asp-controller="Reservation">
                <li class="bk_header_nav_item">Reservations</li></a>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Booking.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
