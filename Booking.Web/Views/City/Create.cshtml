@model Booking.Web.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text_action">Creation Town</h2>
        </div>
        <form asp-action="Create">
            <div class="col-12">
                <div class="input-group">
                    <span class="input-group-text w-10" id="input-name">Name</span>
                    <input asp-for="Name" type="text" class="form-control" aria-describedby="input-name">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="input-group mb-3">
                    <label class="input-group-text w-10" for="selectCountry">Country</label>
                    <select class="form-select" id="selectCountry" asp-for="@Model.CountryFilterApplied"
                        asp-items="@Model.Countries"></select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 150px;">Create</button>
            <a asp-controller=City asp-action="Index" class="btn btn-outline-primary" style="width:150px">
                Cancel
            </a>
        </form>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
