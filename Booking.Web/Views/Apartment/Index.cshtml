@model Booking.Web.Models.ApartmentIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <h2 class="text_action">Available apartments</h2>
        </div>
        <div class="col-3">            
            <form method="get" >
                <div class="input-group mb-3">
                    <label class="input-group-text" for="selectCountry">Country</label>
                    <select class="form-select" id="selectCountry" asp-for="@Model.Options.ApartmentTypeFilterApplied"
                            asp-items="@Model.ApartmentTypes" onchange="this.form.submit()"></select>                    
                </div>
            </form>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-action="Create">
                <i class="bi bi-file-earmark-plus"></i> &nbsp; Create new
            </a>
        </div>
    </div>
    <div class="row">        
        <div class ="col-6">
            <form method="get">
                <input type="hidden" name="pageOptions.CurrentPage" value="@(Model.Options.PageOptions.CurrentPage - 1)" />
                <input type="hidden" name="apartmentTypeFilterApplied" value="@Model.Options.ApartmentTypeFilterApplied" />
                @if (Model.Options.PageOptions.HasPreviousPage)
                {
                    <input class="btn btn-dark btn-sm" type="submit" value="Prev" />
                }
                else
                {
                    <input class="btn btn-dark btn-sm" disabled type="submit" value="Prev" />
                }
            </form>
            @*@if (Model.Options.PageOptions.HasPreviousPage)
            {
                <a asp-action="Index" asp-route-apartmentTypeFilterApplied="@Model.Options.ApartmentTypeFilterApplied"
                    asp-route-pageOptions.CurrentPage="@(Model.Options.PageOptions.CurrentPage - 1)"
               class="btn btn-outline-dark btn-sm">
                    <i class="bi bi-skip-backward-fill"></i>Prev
                </a>
            }
            else
            {
                <a class="btn btn-outline-dark btn-sm" style="pointer-events: none">
                    <i class="bi bi-skip-backward-fill"></i>Prev
                </a>
            }*@
        </div>
        <div class="col-6 text-end">
            <form method="get">
                <input type="hidden" name="pageOptions.CurrentPage" value="@(Model.Options.PageOptions.CurrentPage + 1)" />
                <input type="hidden" name="apartmentTypeFilterApplied" value="@Model.Options.ApartmentTypeFilterApplied" />
                @if (Model.Options.PageOptions.HasNextPage)
                {
                    <input class="btn btn-dark btn-sm" type="submit" value="Next" />
                }
                else
                {
                    <input class="btn btn-dark btn-sm" disabled type="submit" value="Next" />
                }
            </form>
    @*        @if (Model.Options.PageOptions.HasNextPage)
            {
                <a asp-action="Index" asp-route-apartmentTypeFilterApplied="@Model.Options.ApartmentTypeFilterApplied"
                    asp-route-pageOptions.CurrentPage="@(Model.Options.PageOptions.CurrentPage + 1)"
                    class="btn btn-outline-dark btn-sm">Next<i class="bi bi-skip-forward-fill"></i>
                </a>
            }
            else
            {
                <a class="btn btn-outline-dark btn-sm" style="pointer-events: none">
                    Next<i class="bi bi-skip-forward-fill"></i>
                </a>
            }*@
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                City
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Picture
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Apartments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td style="width:500px">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img style="border-radius:10px; border:1px solid #ddd" width="150px"
                    src="@Html.DisplayFor(modelItem => item.Picture)" />
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                </td>
                <td>
                    <a asp-controller="Apartment" asp-action="Edit" asp-route-id="@item.Id"
                    class="btn btn-secondary btn-sm">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                    <a asp-controller="Apartment" asp-action="Details" asp-route-id="@item.Id"
                    class="btn btn-secondary btn-sm">
                        <i class="bi bi-ticket-detailed"></i>
                        Details
                    </a>
                    <a asp-controller="Apartment" asp-action="Delete" asp-route-id="@item.Id"
                    class="btn btn-secondary btn-sm">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
