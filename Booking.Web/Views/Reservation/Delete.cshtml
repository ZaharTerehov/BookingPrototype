@model Booking.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Delete reservation</h1>
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text w-10" id="inputGroup-sizing-name">Name</span>
                <input asp-for="Name" type="text" disabled class="form-control"
                    aria-describedby="inputGroup-sizing-name">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text w-10" id="inputGroup-sizing-email">Email</span>
                <input asp-for="Email" type="text" disabled class="form-control"
                    aria-describedby="inputGroup-sizing-email">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text w-10" id="inputGroup-sizing-apartment">Apartment</span>
                <input asp-for="ApartmentName" type="text" disabled class="form-control"
                    aria-describedby="inputGroup-sizing-apartment">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text w-10" id="inputGroup-sizing-arrivalDate">ArrivalDate</span>
                <input asp-for="ArrivalDateS" type="text" disabled class="form-control"
                    aria-describedby="inputGroup-sizing-arrivalDate">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text w-10" id="inputGroup-sizing-departureDate">DepartureDate</span>
                <input asp-for="DepartureDateS" type="text" disabled class="form-control"
                    aria-describedby="inputGroup-sizing-departureDate">
            </div>
        </div>
        <form asp-action="DeleteReservation">
            <input type="hidden" name="id" value="@Model.Id">
            <button type="submit" class="btn btn-primary" style="width: 150px;">Delete</button>
            <a asp-controller="Reservation" asp-action="Index" class="btn btn-outline-primary" style="width:150px">
                Cancel
            </a>
        </form>
    </div>
</div>
