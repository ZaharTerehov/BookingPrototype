@model IEnumerable<Booking.Web.Models.ReservationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text_action">Current reservations list</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card" style="width: 300px">
                    <img src="@item.FirstPicture" class="card-img-top" alt="photo" style="height: 150px">
                    <div class="card-body">
                        <h6 class="card-title">@item.Name!.CardTitle()</h6>
                        <p class="card-text">@item.ApartmentDescription!.CardText()</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price - &#36;@item.Price</li>
                        <li class="list-group-item">Check in  - @item.ArrivalDateS</li>
                        <li class="list-group-item">Check out - @item.DepartureDateS</li>
                    </ul>
                    <div class="card-body d-flex justify-content-center">
                        <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-secondary btn-sm">
                            <i class="bi bi-trash"></i>
                            Cancel Reservation
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





