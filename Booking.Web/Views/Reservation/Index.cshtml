@model IEnumerable<Booking.Web.Models.ReservationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All reservations</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                <a asp-controller="Reservation" asp-action="Edit" asp-route-id="@item.Id"
                    class="btn btn-secondary btn-sm">
                    <i class="bi bi-pencil-square"></i>
                    Edit
                </a>
                    <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Name"
            class="btn btn-secondary btn-sm">
                    <i class="bi bi-trash"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
