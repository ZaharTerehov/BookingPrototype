@model Booking.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Create";   
}

<div class="container">
    <div class="row">
        <h2>@Model.ApartmentName</h2>
        <div class="col-8">
            @Model.ApartmentDescription
        </div>
        <div class="col-4">
            <img style="border-radius:10px; border:1px solid #ddd" width="400px" src=@Model.ApartmentPicture />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="apartmentId" value="@(Model.ApartmentId)" />
                <input type="hidden" name="apartment.Name" value="@(Model.ApartmentName)" />
                <input type="hidden" name="apartment.Description" value="@(Model.ApartmentDescription)" />
                <input type="hidden" name="apartment.Picture" value="@(Model.ApartmentPicture)" />                
                <input type="hidden" name="price" value="@(Model.Price)" />
                <div class="col-12">
                    <div class="input-group mt-3 mb-3">
                        <span class="input-group-text w-10" id="input-price">Price</span>
                        <input asp-for="Price" disabled class="form-control" aria-describedby="input-price">
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text w-10" id="input-name">Name</span>
                        <input asp-for="Name" class="form-control" aria-describedby="input-name"
                            placeholder="Enter your name">                        
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text w-10" id="input-email">Email</span>
                        <input asp-for="Email" class="form-control" aria-describedby="input-email"
                            placeholder="Enter your email">                        
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text w-10" id="input-arrivalDate">Check in</span>
                        <input type="date" asp-for="ArrivalDate" class="form-control datepicker"
                            aria-describedby="input-arrivalDate" />                        
                    </div>     
                    <div class="mb-3">
                        <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text w-10" id="input-departureDate">Check out</span>
                        <input type="date" asp-for="DepartureDate" class="form-control datepicker"
                               aria-describedby="input-departureDate" />                        
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="DepartureDate" class="text-danger"></span>
                    </div>
                </div>
