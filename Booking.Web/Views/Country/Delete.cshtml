@model Booking.Web.Models.CountryViewModel

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-uppercase">Delete Country</h2>
            <br>
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" type="text">
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-controller=Country asp-action="Index" class="btn btn-outline-warning" style="width:150px">
            Cancel
        </a>
    </div>
</form>
